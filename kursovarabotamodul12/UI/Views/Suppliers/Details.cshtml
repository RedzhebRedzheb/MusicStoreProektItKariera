@model MusicStore.Models.Supplier
@{
    ViewData["Title"] = "Supplier Details";
}

<h1>Supplier Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Contact Info:</dt>
        <dd class="col-sm-10">@Model.ContactInfo</dd>

        <dt class="col-sm-2">Products Supplied:</dt>
        <dd class="col-sm-10">
            @if (Model.Products.Any())
            {
                <ul>
                    @foreach (var product in Model.Products)
                    {
                        <li>@product.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No products associated with this supplier</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>