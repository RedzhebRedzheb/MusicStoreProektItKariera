@model IEnumerable<MusicStore.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<!-- Display the "Create Product" button for Admins -->
@* Only show this button if the user is an Admin *@
@if (User.IsInRole("Admin"))
{
    <a href="@Url.Action("Create", "Products")" class="btn btn-primary mb-3">+ Add New Product</a>
}

<!-- Products Table -->
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Brand?.Name</td>
                <td>@product.Category?.Name</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
