@model IEnumerable<MusicStore.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<h1>Order List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>  <!-- Column for User -->
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User?.UserName</td> <!-- Display the user's name -->
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</div>
