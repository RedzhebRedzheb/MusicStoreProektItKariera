@model IEnumerable<MusicStore.Models.Order>

<h1>Your Orders</h1>

@if (!Model.Any())
{
    <p>You don't have any orders yet!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td> <!-- Display status here -->
                    <td>@order.TotalPrice</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
