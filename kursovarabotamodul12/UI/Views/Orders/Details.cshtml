@model MusicStore.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details for Order #@Model.Id</h1>

<p>
    <strong>Order Date:</strong> @Model.OrderDate <br />
    <strong>Total Price:</strong> @Model.TotalPrice <br />
    <strong>Status:</strong> @Model.Status <br />
    <strong>User:</strong> @Model.User?.UserName  <!-- Admin sees the user who placed the order -->
</p>

<h3>Products in this Order:</h3>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model.OrderItems)
        {
            <tr>
                <td>@orderItem.Product?.Name</td>
                <td>@orderItem.Quantity</td>
                <td>@orderItem.UnitPrice</td>
                <td>@(orderItem.Quantity * orderItem.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Order List</a>
