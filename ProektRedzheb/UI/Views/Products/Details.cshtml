@model MusicStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand.Name</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <h4>Reviews</h4>
    @foreach (var review in Model.Reviews)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Rating: @review.Rating</h5>
                <p class="card-text">@review.Comment</p>
                <small class="text-muted">By @review.User.UserName on @review.ReviewDate.ToString("d")</small>
            </div>
        </div>
    }

    <a asp-action="CreateReview" asp-route-productId="@Model.Id" class="btn btn-primary">Add Review</a>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>