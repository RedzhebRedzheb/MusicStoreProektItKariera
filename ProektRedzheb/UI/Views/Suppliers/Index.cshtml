@model IEnumerable<MusicStore.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.ContactInfo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@supplier.Id" class="btn btn-info">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@supplier.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@supplier.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success">Create New</a>
}