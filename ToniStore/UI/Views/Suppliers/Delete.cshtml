@model MusicStore.Models.Supplier
@{
    ViewData["Title"] = "Delete Supplier";
}

<h1>Delete Supplier</h1>

@if (ViewBag.CanDelete == false)
{
    <div class="alert alert-danger">
        Cannot delete supplier with associated products!
    </div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Contact Info:</dt>
        <dd class="col-sm-10">@Model.ContactInfo</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" @(ViewBag.CanDelete == false ? "disabled" : "") />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>